{
  "name": "Python 3.12 (uv-based)",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  "postCreateCommand": "python -m pip install --upgrade pip && python -m pip install uv && uv sync --extra dev --extra docs --upgrade",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "astral-sh.ruff",
        "editorconfig.editorconfig",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "yzhang.markdown-all-in-one"
      ]
    }
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "forwardPorts": []
}
